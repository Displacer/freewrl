# One green sphere
Transform {
	translation -2 0 0
	children [
		Shape {
			geometry Sphere { }
			appearance Appearance {material Material {diffuseColor 0.2 0.8 0.2}}
		}
		DEF L1 DirectionalLight {
		}
	]
}


# One green sphere
Transform {
	translation 0 0 0
	rotation 0 0 1 1.7
	children [
		Shape {
			geometry Sphere { }
			appearance Appearance {material Material {
				specularColor 1 1 1
				diffuseColor 0.5 0.5 0.5
			}}
		}
		Transform {
			translation -2 0 0
			children [
				DEF L3 DirectionalLight {
					color 0 1 0
				}
				Shape {
					geometry Sphere { }
					appearance Appearance {material Material {
						specularColor 1 1 1
						diffuseColor 0.5 0.5 0.5
					}}
				}

			]
		}
		DEF L2 DirectionalLight {
			color 1 0 0
		}
	]
}

DEF TS TimeSensor {loop TRUE cycleTime 1.5}
DEF PI PositionInterpolator {key [0 0.3 0.6 1]
	keyValue [1 0 0 0 1 0 0 0 1 1 0 0] }

DEF TS2 TimeSensor {loop TRUE cycleTime 3.5}
DEF PI2 PositionInterpolator {key [0 0.3 0.6 1]
	keyValue [0 1 0 0 0 -1 1 0 -1 0 1 0] }

ROUTE TS.fraction_changed TO PI.set_fraction
ROUTE PI.value_changed TO L1.direction
ROUTE PI.value_changed TO L2.direction

ROUTE TS2.fraction_changed TO PI2.set_fraction
ROUTE PI2.value_changed TO L3.direction
