# make distribution directory, and copy all needed files over.

# Assume you are in root of FreeWRL directory.

rm -r ../FreeWRL-1.09-pre1
mkdir ../FreeWRL-1.09-pre1

cp -r . ../FreeWRL-1.09-pre1

# now, trim off any fat you see 

cd ../FreeWRL-1.09-pre1

find . -name typescript -exec rm {} \;
find . -name CVS -exec rm -r {} \;
find . -name "*.class" -exec rm -r {} \;
find . -name "*.jar" -exec rm -r {} \;
rm package*
rm Viewer.pm
rm Quaternion.pm
rm VRMLServ.pm
rm lastcvscheckin
rm -r JS/js/Linux_All_DBG.OBJ
rm -r Plugin/mozilla
rm -r nodes/
rm freewrl

# cleanup Plugin directory

rm -r Plugin/CFuncs/
rm -r Plugin/mozilla/
rm -r Plugin/common/
rm -r Plugin/include/
rm -r Plugin/Source/
rm -r Plugin/Unix/

