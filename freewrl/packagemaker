# make distribution directory, and copy all needed files over.

# Assume you are in root of FreeWRL directory.

rm -r ../FreeWRL-1.06-pre2
mkdir ../FreeWRL-1.06-pre2

cp -r . ../FreeWRL-1.06-pre2

# now, trim off any fat you see 

cd ../FreeWRL-1.06-pre2

find . -name typescript -exec rm {} \;
find . -name CVS -exec rm -r {} \;
rm package*
rm Viewer.pm
rm Quaternion.pm
rm VRMLServ.pm
rm lastcvscheckin
rm -r JS/js/Linux_All_DBG.OBJ
rm -r Plugin/mozilla
rm -r nodes/
rm freewrl
